                                    </div>
                                    <div class="indent">
                                        {{widget('image', 'image3', { 'src': asset('images/page1-img3.jpg'), 'fileSize': '58kb', 'imageSize': '230 x 154', 'imageWidth': '300px'})|raw}}
                                        {{widget('content', 'content3', {content: 'Praesent vestibulum molestie lacus. Aenean nonummy hendrerit mauris. Phasellus porta.', lines: 'all'})|raw}}
                                        {{widget('button', 'button3', {italic: false, text:'button', 'align':'widget-align-right'})|raw}}
                                    </div>
                                </div>
                                {{widget('space', 'space', {'height': '30'})|raw}}
                            </article>
                            <article class="span3">
                                <div class="schedule">
                                   <div class="title">
                                        {{widget('content', 'title7', {content: '<h2>opening</h2>', lines: 'all'})|raw}}
                                        {{widget('content', 'title8', {content: '<h2>hours</h2>', lines: 'all'})|raw}}
                                    </div>
                                    <ul>
                                        <li>
                                            {{widget('content', 'text1', {content: 'Main Menu:', lines: 'all'})|raw}}
                                            {{widget('content', 'time1', {content: '12am - 12pm', lines: 'all'})|raw}}
