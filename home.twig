                                    </ul>
                                    {{widget('button', 'button4', {italic: false, text:'Book a table!', 'align':'widget-align-center'})|raw}}
                                </div>
                                {{widget('space', 'space', {'height': '30'})|raw}}
                            </article>
                        </div>
                    </article>
                </div>
                <div class="row">
                    <article class="span12">
                        {{widget('space', 'space', {'height': '20'})|raw}}
                        <div class="row">
                            <article class="span9">
                                {{widget('image', 'left', { 'src': asset('images/page1-img4.jpg'), 'fileSize': '640kb', 'imageSize': '270 x 285', 'imageWidth': '270px'})|raw}}
                                <div class="wrapper">
                                    {{widget('content', 'title9', {content: '<h2>Offering high quality chinese food and warm ambiance!</h2>', lines: 'all'})|raw}}
