{% extends "layout.twig" %}

{% block content %}

<div class="bg-glow">

    <!--header-->
    <header>
        <div class="header">
            <div class="container">
                <div class=row>
                    <article class="span6">
                        <h1 class="brand">
                            {{widget('companyheader', 'companyheader', {"defaultlogo": asset('/images/logo.png')})|raw}}
                            {{widget('space', 'space', {'height': '30'})|raw}}
                        </h1>
                    </article>
                    <article class="span6">
                        <div class="nav-collapse nav-collapse_ collapse">
                            {{widget('navigation', 'navigation', {'align': 'left'})|raw}}
                            {{widget('space', 'space', {'height': '30'})|raw}}
                        </div>
                    </article>
                </div>
            </div>
        </div>
    </header>

    <section class="showcase">
