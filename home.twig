                                        {{widget('content', 'blockquote', {content: '<blockquote>Praesent vestibu lum molestie lacus. Aenean nonum.</blockquote>', lines: 'all'})|raw}}
                                        {{widget('button', 'button5', {italic: false, text:'more testimonials', 'align':'widget-align-center'})|raw}}
                                    </div>
                                </div>
                                {{widget('space', 'space', {'height': '30'})|raw}}
                            </article>
                        </div>
                    </article>
                </div>
            </div>
        </section>

    </div>

    <!--footer-->
    <footer>
        <div class="container">
            <div class="row">
                <section class="span12">
                    <div class="row">
                        <article class="span9">
                            {{widget('companyname', 'name', {"business": "Chinahi"})|raw}}
                            {{widget('content', 'copyright_copy', {content: '&copy; &nbsp; 2013 &nbsp; | &nbsp; ', lines: 'all'})|raw}}
                            <a href="#">{{widget('content', 'copyright_link', {content: 'Privacy Policy', lines: 'all'})|raw}}</a>
                            {{widget('space', 'space', {'height': '30'})|raw}}
                        </article>
                        <article class="span3 center">
                            {{widget('content', 'contact_text', {content: 'reservation', lines: 'all'})|raw}}
                            {{widget('content', 'phone', {content: '+1 800 123 45 67', lines: 'all'})|raw}}
                            {{widget('space', 'space', {'height': '30'})|raw}}
                        </article>
                    </div>
                </section>
            </div>
        </div>
    </footer>
    
</div>

{% endblock %}