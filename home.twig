                                </div>
                                {{widget('space', 'space', {'height': '30'})|raw}}
                            </article>
                            <article class="span3">
                                <div class="img-block">
                                    <div class="title">
                                        {{widget('content', 'title3', {content: '<h2>Great</h2>', lines: 'all'})|raw}}
                                        {{widget('content', 'title4', {content: '<h2>Service</h2>', lines: 'all'})|raw}}
                                    </div>
                                    <div class="indent">
                                        {{widget('image', 'image2', { 'src': asset('images/page1-img2.jpg'), 'fileSize': '58kb', 'imageSize': '230 x 154', 'imageWidth': '300px'})|raw}}
