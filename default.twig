{% extends "layout.twig" %}

{% block content %}

<div class="bg-glow">

    <!--header-->
    <header>
        <div class="header">
            <div class="container">
                <div class=row>
                    <article class="span6">
                        {{widget('logo', 'name', {"defaultlogo": asset('images/logo.png')})|raw}}
                    </article>
                    <article class="span6">
                        <div class="nav-collapse nav-collapse_ collapse">
                            {{widget('navigation', 'navigation', {'align': 'left'})|raw}}
                        </div>
                    </article>
                </div>
            </div>
        </div>
    </header>

    <div class="global">

        <!--content-->

        <section>
            <div class="container">
                <div class="row">
                    <article class="span12">
                        {{zone('main')|raw}}
                    </article>
                </div>
            </div>
        </section>

    </div>

    <!--footer-->
    <footer>
        <div class="container">
            <div class="row">
                <section class="span12">
                    <div class="row">
                        <article class="span9">
                            {{widget('companyname', 'name', {"business": "Chinahi"})|raw}}
                            {{widget('profile', 'copyright', { 'profileType':'copyright' })|raw}}
                            {{widget('space', 'space', {'height': '30'})|raw}}
                        </article>
                        <article class="span3 center">
                            {{widget('content', 'contact_text', {content: 'reservation', lines: 'all'})|raw}}                            
                            {{widget('profile', 'phone', { 'profileType':'phone' })|raw}}
                            {{widget('space', 'space', {'height': '30'})|raw}}
                        </article>
                    </div>
                </section>
            </div>
        </div>
    </footer>
    
</div>

{% endblock %}